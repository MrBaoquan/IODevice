<IORoot>

  <!-- Default device, posses all keyboard & mouse event, this node could not be removed . Must put this node at the top position . -->
  <!-- Strandar Device -->
  <Device Name="Standard" Type="Standard"></Device>

  <Device Name="ExtDev" Type="External" DllName="RPLidar"  Index="0">
    <Properties>
      <Key Name="Axis_00" PreOffset="0.0" PreScale="1.0" Max="5" DeadZone="0.5" Sensitivity="1.0" Exponent="1.0" Invert="False" InvertEvent="False"></Key>
    </Properties>

    <Action Name="TestAction">
      <Key Name="AnyKey"></Key>
    </Action>

    <Axis Name="TestAxis">
      <Key Name="Right" Scale="1" />
      <Key Name="Left" Scale="-5" />
    </Axis>

    <OAction Name="Output">
      <Key Name="OAxis_02" Scale="1" InvertEvent="False"></Key>
      <Key Name="OAxis_03" Scale="1" InvertEvent="False"></Key>
    </OAction>

  </Device>

</IORoot>