<IORoot>

  <!-- Default device, posses all keyboard & mouse event, this node could not be removed . Must put this node at the top position . -->
  <!-- Strandar Device -->
  <Device Name="Standard" Type="Standard"></Device>

  <Device Name="PCI2312A" Type="External" DllName="PCI2312A"  Index="0">
    <Properties>
      <Key Name="Axis_01" PreScale="1000.0" ></Key>
    </Properties>

    <Action Name="TestAction">
      <Key Name="AnyKey"></Key>
    </Action>

    <Axis Name="TestAxis">
      <Key Name="Right" Scale="1" />
      <Key Name="Left" Scale="-5" />
    </Axis>

    <OAction Name="Output">
      <Key Name="OAxis_02" Scale="1" InvertEvent="True"></Key>
      <Key Name="OAxis_04" Scale="1" InvertEvent="False"></Key>
    </OAction>

  </Device>

</IORoot>